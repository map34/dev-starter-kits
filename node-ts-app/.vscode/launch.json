    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Start App",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "start:dev"]
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Nodemon Test",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "test"]
        }
    ]
}